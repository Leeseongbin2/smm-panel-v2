{
  "compilerOptions": {
    "target": "ES2020",                       // ES2017 → ES2020으로 향상
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "ESNext",                       // ✅ ESM 실행을 위한 핵심 설정
    "moduleResolution": "Node",              // ✅ 'bundler' → 'Node'로 변경
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules"]
}